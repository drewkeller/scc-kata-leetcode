{
    "tasks": [
        {
            "label": "Run SolutionTest",
            "command": "${workspaceFolder}/SolutionTest.exe",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "test",
        },

        {
            "type": "cppbuild",
            "label": "Build SolutionTest",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // required for GoogleTest
                "-std=c++17",
                "-pthread",
                // include GoogleTest
                "-I${workspaceFolder}/../lib/googletest/googletest/include",
                "-I${workspaceFolder}/../lib/googletest/googlemock/include",
                "-L${workspaceFolder}/../lib/googletest/bin",
                // linking GoogleTest
                "-lgtest", "-lgtest_main", "-lgmock", "-lgmock_main",               
                "-o", "SolutionTest.exe",
                "${workspaceFolder}\\..\\lib\\googletest\\bin\\libgtest.a",
                "../lib/googletest/bin/libgtest_main.a",
                "../lib/googletest/bin/libgmock.a",
                "../lib/googletest/bin/libgmock_main.a",
                // Solution sources
                "-I${workspaceFolder}/067",
                "./067/Solution.cpp",
                "./067/SolutionTest.cpp",
                "${workspaceFolder}\\067\\SolutionTest.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: C:/Strawberry/c/bin/g++.exe"
        },

        {
            "type": "cppbuild",
            "label": "Build Solution",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-pthread",
                "-g",
                "-o", "${workspaceFolder}/067/Solution.exe",
                "-I./067",
                "./067/main.cpp",
                "./067/Solution.cpp",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: C:/Strawberry/c/bin/g++.exe"
        },

        {
            "type": "cppbuild",
            "label": "Build GoogleTest",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-Igoogletest",
                "-Igoogletest/include",
                "-Igooglemock",
                "-Igooglemock/include",
                "-c", 
                "googletest/src/gtest-all.cc",
                "googletest/src/gtest_main.cc",
                "googlemock/src/gmock-all.cc",
                "googlemock/src/gmock_main.cc",
                "-pthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}/lib/googletest"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: C:/Strawberry/c/bin/g++.exe"
        }
    ],
    "version": "2.0.0"
}